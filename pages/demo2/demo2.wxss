.background {
  width: 100%;
  background-color: #f5f5f5;
  padding-top: 70rpx;
  overflow: hidden;
}

.head {
  width: 100%;
  height: 70rpx;
  background-color: #fff;
  display: flex;
  justify-content: center;
  align-items: center;
  position: fixed;
  top: 0;
  border-bottom: 1px solid #ccc;
}

.head-text {
  color: rgb(0, 168, 255);
}

.head::after {
  content: '';
  position: absolute;
  bottom: 0;
  text-align: center;
  width: 150rpx;
  height: 5rpx;
  background-color: rgb(0, 168, 255);
  border-radius: 50rpx;
}

.search-wrap {
  margin-top: 30rpx;
}

.searchbar-cls {
  padding: 0 16rpx;
  background-color: transparent;
  padding-bottom: 30rpx;
}

.content-wrap {
  display: flex;
  flex-direction: column;
}

.one-box {
  padding: 30rpx;
  background-color: #fff;
  display: flex;
  flex-direction: row;
  margin-bottom: 30rpx;
}

.one-box-tag {
  background-color: #1b65b9;
  margin: 8rpx 20rpx auto 0;
  height: 40rpx;
  width: 8rpx;
  border-radius: 4rpx;
}

.one-box-content {
  font-size: 32rpx;
}

.one-box-date {
  margin: 20rpx 0 0 30rpx;
  font-size: 24rpx;
  color: #999;
}
